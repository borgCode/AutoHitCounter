<Window x:Class="AutoHitCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:AutoHitCounter.Controls"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:converters="clr-namespace:AutoHitCounter.Converters"
        xmlns:behaviors="clr-namespace:AutoHitCounter.Behaviors"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Style="{StaticResource DefaultWindowStyle}"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="Auto Hit Counter" Height="350" Width="525">
    <Window.Resources>
        <FontFamily x:Key="AppFont">Segoe UI</FontFamily>
        <system:Double x:Key="FontSizeHeader">15</system:Double>
        <system:Double x:Key="FontSizeBody">13</system:Double>
        <converters:ParentChildMarginConverter x:Key="ParentChildMarginConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:ExpanderArrowConverter x:Key="ExpanderArrowConverter" />
        <xctk:InverseBoolConverter x:Key="InverseBoolConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:TitleBar Grid.Row="0" Title="Auto Hit Counter" />

        <Grid Grid.Row="1" Margin="5">
            <TextBlock Text="{Binding AppVer}"></TextBlock>
            <TextBlock Text="{Binding AttachedText}"
                       HorizontalAlignment="Right">
            </TextBlock>
        </Grid>

        <TabControl Grid.Row="2">

            <TabItem Header="Splits">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="54" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="25" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="8,4,8,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,4,0">
                            <TextBlock Text="GAME"
                                       FontFamily="{StaticResource AppFont}"
                                       FontSize="10"
                                       Foreground="#666666"
                                       Margin="2,0,0,2" />
                            <ComboBox ItemsSource="{Binding Games}"
                                      SelectedItem="{Binding SelectedGame}"
                                      DisplayMemberPath="GameName" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="4,0,4,0">
                            <TextBlock Text="PROFILE"
                                       FontFamily="{StaticResource AppFont}"
                                       FontSize="10"
                                       Foreground="#666666"
                                       Margin="2,0,0,2" />
                            <ComboBox ItemsSource="{Binding Profiles}"
                                      SelectedItem="{Binding ActiveProfile}"
                                      DisplayMemberPath="Name" />
                        </StackPanel>

                        <Button Grid.Column="2"
                                Content="✎"
                                Command="{Binding OpenProfileEditorCommand}"
                                VerticalAlignment="Center"
                                Width="30"
                                Height="22"
                                FontSize="14"
                                ToolTip="Edit Profile" />
                    </Grid>

                    <Border Grid.Row="1" BorderBrush="#333333" BorderThickness="0,0,0,1">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock FontFamily="{StaticResource AppFont}"
                                       FontSize="{StaticResource FontSizeHeader}"
                                       Text="Split"
                                       VerticalAlignment="Center"
                                       Margin="10, 0, 0,0" />

                            <TextBlock Grid.Column="1"
                                       Text="Hits"
                                       FontFamily="{StaticResource AppFont}"
                                       FontSize="{StaticResource FontSizeHeader}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                            </TextBlock>

                            <TextBlock Grid.Column="2"
                                       Text="Diff"
                                       FontFamily="{StaticResource AppFont}"
                                       FontSize="{StaticResource FontSizeHeader}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                            </TextBlock>

                            <TextBlock Grid.Column="3"
                                       Text="PB"
                                       FontFamily="{StaticResource AppFont}"
                                       FontSize="{StaticResource FontSizeHeader}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center">

                            </TextBlock>
                        </Grid>
                    </Border>
                    <ListBox Grid.Row="2"
                             ItemsSource="{Binding Splits}"
                             SelectedItem="{Binding SelectedSplit}"
                             AlternationCount="2"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="BorderThickness" Value="3,0,0,0" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Style.Triggers>
                                    <Trigger Property="ListBox.AlternationIndex" Value="0">
                                        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
                                    </Trigger>
                                    <Trigger Property="ListBox.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="#222222" />
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                        <Setter Property="BorderBrush" Value="#00CC66" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsParent}" Value="True">
                                        <Setter Property="Background" Value="#1A1A1A" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="FontWeight" Value="SemiBold" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <!-- Main split row -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   FontFamily="{StaticResource AppFont}"
                                                   FontSize="{StaticResource FontSizeBody}"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0,0,0" />

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding NumOfHits}"
                                                   FontFamily="{StaticResource AppFont}"
                                                   FontSize="{StaticResource FontSizeBody}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" />

                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Diff}"
                                                   FontFamily="{StaticResource AppFont}"
                                                   FontSize="{StaticResource FontSizeBody}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" />

                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding PersonalBest}"
                                                   FontFamily="{StaticResource AppFont}"
                                                   FontSize="{StaticResource FontSizeBody}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Grid>

                                    <!-- Notes area -->
                                    <Grid Margin="10,2,10,4"
                                          Visibility="{Binding DataContext.ShowNotes,
                      RelativeSource={RelativeSource AncestorType=Window},
                      Converter={StaticResource BoolToVisConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0"
                                                 Text="{Binding Notes, UpdateSourceTrigger=LostFocus}"
                                                 TextWrapping="Wrap"
                                                 AcceptsReturn="True"
                                                 MaxHeight="50"
                                                 FontSize="11"
                                                 Foreground="#777"
                                                 IsReadOnly="{Binding IsEditingNotes,
                                                Converter={StaticResource InverseBoolConverter}}"
                                                 behaviors:EditableTextBoxBehavior.EditTrigger="{Binding IsEditingNotes, Mode=TwoWay}">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Background" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="0" />
                                                    <Setter Property="Padding" Value="0" />
                                                    <Setter Property="Cursor" Value="Arrow" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEditingNotes}" Value="True">
                                                            <Setter Property="Background" Value="#1a1a30" />
                                                            <Setter Property="BorderThickness" Value="1" />
                                                            <Setter Property="BorderBrush" Value="#333366" />
                                                            <Setter Property="Cursor" Value="IBeam" />
                                                            <Setter Property="Padding" Value="4,2" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>

                                        <Button Grid.Column="1"
                                                Width="20" Height="20"
                                                VerticalAlignment="Top"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Command="{Binding ToggleEditNotesCommand,
                                                RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Content" Value="✎" />
                                                    <Setter Property="Foreground" Value="#555" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEditingNotes}" Value="True">
                                                            <Setter Property="Content" Value="✓" />
                                                            <Setter Property="Foreground" Value="#4a9eff" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Grid Grid.Row="3">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Button Content="+ Hit" Margin="5,0,0,5"></Button>
                            <Button Content="Next Split ->" Margin="5,0,0,5"></Button>
                            <Button Content="Reset" Margin="5,0,0,5"></Button>
                        </StackPanel>

                        <TextBlock HorizontalAlignment="Right" Text="{Binding InGameTime, StringFormat=hh\\:mm\\:ss}"></TextBlock>
                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="Hotkeys"></TabItem>
            <TabItem Header="Settings"></TabItem>
        </TabControl>
    </Grid>
</Window>